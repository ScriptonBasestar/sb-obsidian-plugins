{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES6", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/test-utils.disabled"]
}
