{
  "name": "@scripton/obsidian-scripton-sync",
  "version": "1.0.0",
  "description": "Advanced sync for Obsidian - settings, Git integration, and Scripton Cloud sync with branch strategies",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf dist lib",
    "release": "npm run build && zip -r scripton-sync.zip main.js manifest.json styles.css"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "settings",
    "sync",
    "git",
    "scripton",
    "cloud"
  ],
  "author": "Scripton",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.4",
    "builtin-modules": "^5.0.0",
    "esbuild": "^0.27.1",
    "obsidian": "latest",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@sb-obsidian-plugins/shared": "workspace:*",
    "js-yaml": "^4.1.1",
    "simple-git": "^3.30.0"
  }
}
